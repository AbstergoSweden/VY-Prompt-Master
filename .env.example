# VY Prompt Master - Environment Configuration
# Copy this file to .env and fill in your API keys

# AI Provider Configuration
# At least one API key is required for prompt generation

# Anthropic Claude API Key (recommended)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key (alternative)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Default AI Provider (anthropic | openai)
# Used when --provider flag is not specified
DEFAULT_AI_PROVIDER=anthropic

# Default Model (optional)
# If not set, uses provider's default model
# Examples: claude-3-5-sonnet-20241022, gpt-4o
DEFAULT_MODEL=

# Generation Settings
# Maximum refinement iterations when validation fails
MAX_REFINEMENT_ITERATIONS=3

# Validation Settings
# Enable strict mode (fail on warnings)
STRICT_VALIDATION=false

# Logging
# Log level: debug | info | warn | error
LOG_LEVEL=info
